<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Add Player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_textView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Last Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lname_textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/lname_editText" />

    <TextView
        android:text="First Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fname_textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/fname_editText" />
    <RadioGroup android:id="@+id/player_class_group" android:layout_width="fill_parent" android:layout_height="wrap_content" >
        <RadioButton
            android:text="Freshman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fr_radioButton" />

        <RadioButton
            android:text="Sophomore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/so_radioButton" />

        <RadioButton
            android:text="Junior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jr_radioButton" />

        <RadioButton
            android:text="Senior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sr_radioButton" />
    </RadioGroup>

    <TextView
        android:text="Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number_editText" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player_save_button" />
</LinearLayout>