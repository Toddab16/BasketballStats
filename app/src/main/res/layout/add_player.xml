<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:text="Add Player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_textView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Last Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lname_textView"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginEnd="20dp" />

        <TextView
            android:text="First Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fname_textView"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_marginEnd="20dp" />

        <TextView
            android:text="Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_textView"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:layout_marginEnd="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lname_editText"
            android:textColorHint="@android:color/holo_blue_bright"
            android:layout_weight="1"
            android:layout_marginEnd="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fname_editText"
            android:textColorLink="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/holo_blue_bright"
            android:layout_weight="1"
            android:layout_marginEnd="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/number_editText"
            android:textColorHint="@android:color/holo_blue_bright"
            android:layout_weight="1"
            android:layout_marginEnd="20dp" />
    </LinearLayout>

    <RadioGroup android:id="@+id/player_class_group" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <RadioButton
            android:text="Freshman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fr_radioButton"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:checked="true" />

        <RadioButton
            android:text="Sophomore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/so_radioButton"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:textSize="18sp" />

        <RadioButton
            android:text="Junior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jr_radioButton"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:textSize="18sp" />

        <RadioButton
            android:text="Senior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sr_radioButton"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:text="SAVE PLAYER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player_save_button"
        android:layout_marginTop="20dp"
        android:textSize="24sp" />

</LinearLayout>