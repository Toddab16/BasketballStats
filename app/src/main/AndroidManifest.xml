<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toddbray.basketballstats">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="landscape" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewPlayer" android:screenOrientation="landscape" android:noHistory="true">
        </activity>
        <activity android:name=".NewGame" android:screenOrientation="landscape" android:noHistory="true">
        </activity>
        <activity android:name=".ViewPlayer" android:screenOrientation="landscape" android:noHistory="true">
        </activity>
        <activity android:name=".ViewSchedule" android:screenOrientation="landscape" android:noHistory="true">
        </activity>
        <activity android:name=".NewStats" android:screenOrientation="landscape" android:noHistory="true">
        </activity>
        <activity android:name=".ViewStats" android:screenOrientation="landscape" android:noHistory="true">
        </activity>

    </application>

</manifest>